(define (domain seasoned-salt)
  (:requirements :strips :typing)
  (:types entity container food tool)
  (:predicates
    (stratified ?e - entity)
    (separate ?e - entity)
    (mixed ?e - entity)
    (inContainer ?e - entity ?c - container)
    (empty ?c - container)
    (full ?c - container)
    (onCounter ?c - container)
    (flavorful ?f - food)
    (plain ?f - food)
    (present ?t - tool)
    (absent ?t - tool)
  )
  (:action mix-ingredients
    :parameters (?e - entity)
    :precondition (and (stratified ?e) (separate ?e))
    :effect (and (mixed ?e) (not (stratified ?e)) (not (separate ?e)))
  )
  (:action pour-into-container
    :parameters (?e - entity ?c - container)
    :precondition (and (mixed ?e) (empty ?c))
    :effect (and (inContainer ?e ?c) (full ?c) (onCounter ?c) (not (empty ?c)))
  )
  (:action season-food
    :parameters (?e - entity ?f - food)
    :precondition (mixed ?e)
    :effect (and (flavorful ?f) (not (plain ?f)))
  )
  (:action grind-ingredients
    :parameters (?e - entity ?t - tool)
    :precondition (and (mixed ?e) (absent ?t))
    :effect (and (present ?t))
  )
  (:action transfer-to-storage
    :parameters (?e - entity ?c - container)
    :precondition (inContainer ?e ?c)
    :effect (and (empty ?c))
  )
)